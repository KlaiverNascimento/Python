while True:
    print('\nSISTEMA DE VERIFICAÇÃO DOS DADOS')
    print('O que você gostaria de consultar dentro do nosso banco:')
    print('1º Verificar todos os usuários cadastrados')
    print('2º Procurar usuário especifico')
    print('3º Adicionar um novo usuário')
    print('4º Sair')

    Número = input('\nInforme aqui a opção que deseja: ')

    if Número == '4':
        print('Encerrando...')
        break 
    elif Número == '1':
        print('\nUsuários Cadastrados:')
        print(CADASTRADOS)

    elif Número == '2':
        while True:
            print('\nVocê gostaria de consultar os dados por meio:')
            print('1º Nome')
            print('2º ID')
            print('3º Campos completos do usuário')

            Selecionar = input('\nInforme a opção: ')

            if Selecionar == '1':
                Nome = input('Me informe o nome do usuário: ')
                try:
                    CADASTRADOS[Nome]
                    print(f'O usuário {Nome} já está cadastrado no sistema.')
                except KeyError:
                    print(f'O usuário {Nome} não se encontra no nosso banco de dados.')
                break

            elif Selecionar == '2':
                try:
                    ID = int(input('Me informe o ID que deseja consultar: '))
                    encontrado = False
                    for VER_ID in CADASTRADOS.values():
                        if ID in VER_ID:
                            print(f'O ID {ID} informado já está cadastrado no sistema!')
                            encontrado = True
                            break
                    if not encontrado:
                        print(f'O ID {ID} não está no nosso banco de usuários.')
                except ValueError:
                    print("Entrada inválida. Por favor, digite um número válido para o ID.")
                break

            elif Selecionar == '3':
                CONSULTA = input('Me informe o NOME ou o ID: ')
                try:
                    CONSULTA_ID = int(CONSULTA)
                    usuario_encontrado = None
                    for nome, ids in CADASTRADOS.items():
                        if CONSULTA_ID in ids:
                            usuario_encontrado = nome
                            break
                    if usuario_encontrado:
                        print(f"Nome: {usuario_encontrado}, ID: {CADASTRADOS[usuario_encontrado]}")
                    else:
                        print(f"ID '{CONSULTA_ID}' não encontrado.")
                except ValueError:
                    nome_procurado = CONSULTA
                    try:
                        ids_encontrados = CADASTRADOS[nome_procurado]
                        print(f"Nome: {nome_procurado} e ID: {ids_encontrados}")
                    except KeyError:
                        print(f"Usuário '{nome_procurado}' não encontrado.")
                        adicionar = input(f"Usuário '{nome_procurado}' não encontrado. Gostaria de adicioná-lo? (s/n): ").lower()
                        if adicionar == 's':
                            while True:
                                try:
                                    New_ID_str = input(f'Me informe o ID para {nome_procurado} (5 dígitos): ')
                                    New_ID = int(New_ID_str)
                                    if New_ID < 10000 or New_ID > 99999:
                                        print('O ID deve ter 5 dígitos. Tente novamente.')
                                        continue

                                    CADASTRADOS[nome_procurado] = [New_ID]
                                    print(f"Usuário '{nome_procurado}' adicionado com sucesso!")
                                    break
                                except ValueError:
                                    print('Entrada inválida. Por favor, digite um valor válido.')
                break

            else:
                print('\nOpção de consulta inválida. Por favor, escolha 1, 2 ou 3.')
                continue

            continuar_consulta = input('\nRealizar outra consulta? (s/n): ').lower()
            if continuar_consulta != 's':
                break

    elif Número == '3':
        try:
            QuantidadeNovosUsuários = int(input('Quantos usuários você gostaria de adicionar: '))
            for i in range(QuantidadeNovosUsuários):
                print(f'\nAdicionando o {i+1}º usuário...')
                New_Usuário = input(f'Me informe o nome do {i+1}º usuário: ')

                while True:
                    New_ID_str = input(f'Me informe o ID do {i+1}º usuário (5 dígitos): ')
                    try:
                        New_ID = int(New_ID_str)
                        if New_ID < 10000 or New_ID > 99999:
                            print('O ID deve ter 5 dígitos. Tente novamente.')
                            continue
                        break
                    except ValueError:
                        print('Entrada inválida. Por favor, digite um valor válido.')

                CADASTRADOS[New_Usuário] = [New_ID]
                print(f'Usuário {New_Usuário} adicionado com sucesso!')
            print('\nCadastro de todos os usuários finalizado.')

        except ValueError:
            print('\nO valor inserido está incorreto. Tente novamente e insira um valor válido.')

    else:
        print('\nOpção inválida. Por favor, escolha 1, 2, 3 ou 4.')

    if Número != '4':
        continuar_principal = input('\nGostaria de continuar no sistema? (s/n): ').lower()
        if continuar_principal != 's':
            print('Encerrando o programa...')
            break
